@model IEnumerable<Model.Loaner>

@{
    ViewBag.Title = "ChooseLoaner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ChooseLoaner</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Select Loaner", "ChooseBook", new { LoanerId=item.Id }) 
        </td>
    </tr>
}

</table>
